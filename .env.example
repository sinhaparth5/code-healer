# CodeHealer Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# AWS Configuration
# ============================================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# ============================================
# GitHub Configuration
# ============================================
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GITHUB_REPO=your-org/your-repo
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here

# ============================================
# LLM/AI Configuration
# ============================================

# OpenAI Configuration (Primary LLM Provider)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1024
OPENAI_TEMPERATURE=0.1

# NVIDIA NIM Configuration (Primary LLM Provider)
NVIDIA_NIM_API_KEY=nvapi-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NVIDIA_NIM_ENDPOINT=https://integrate.api.nvidia.com/v1
NVIDIA_NIM_MODEL=nvidia/llama-3.1-nemotron-nano-8b-v1

# LLM Provider Selection (openai, nvidia_nim, sagemaker, fallback)
LLM_PROVIDER=nvidia_nim
LLM_FALLBACK_ENABLED=true
LLM_TIMEOUT_SECONDS=30
ENABLE_LLM_ANALYSIS=true

# ============================================
# Slack Configuration
# ============================================
SLACK_BOT_TOKEN=xoxb-xxxxxxxxxxxx-xxxxxxxxxxxx-xxxxxxxxxxxxxxxxxxxxxxxx
SLACK_CHANNEL_ID=C0XXXXXXXXX
SLACK_SENIOR_DEV_ID=U0XXXXXXXXX
SLACK_SEARCH_CHANNELS=C0XXXXXXXXX,C1XXXXXXXXX,C2XXXXXXXXX

# ============================================
# SageMaker Configuration
# ============================================
SAGEMAKER_LLAMA_ENDPOINT=llama-31-endpoint
SAGEMAKER_EMBEDDING_ENDPOINT=embedding-endpoint
SAGEMAKER_REGION=us-east-1

# ============================================
# OpenSearch Configuration
# ============================================
OPENSEARCH_ENDPOINT=https://search-codehealer-xxxxx.us-east-1.es.amazonaws.com
OPENSEARCH_INDEX=code_fixes
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=ComplexPassword123!

# ============================================
# DynamoDB Configuration
# ============================================
DYNAMODB_TABLE_NAME=codehealer-audit-logs
DYNAMODB_REGION=us-east-1

# ============================================
# Secrets Manager Configuration
# ============================================
GITHUB_TOKEN_SECRET_ARN=arn:aws:secretsmanager:us-east-1:123456789012:secret:codehealer/github-token
SLACK_TOKEN_SECRET_ARN=arn:aws:secretsmanager:us-east-1:123456789012:secret:codehealer/slack-token

# ============================================
# CodeHealer Configuration
# ============================================
CONFIDENCE_THRESHOLD_HIGH=85
CONFIDENCE_THRESHOLD_MEDIUM=60
MAX_FILE_SIZE_KB=500
ANALYSIS_TIMEOUT_SECONDS=300
ENABLE_AUTO_FIX=true
ENABLE_SLACK_NOTIFICATIONS=true

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
CLOUDWATCH_LOG_GROUP=/aws/lambda/codehealer

# ============================================
# Local Development
# ============================================
LOCAL_MODE=false
MOCK_AWS_SERVICES=false
